function enforceParagraphStructure(srcKO, translated){
  try{
    const srcParas = String(srcKO || "").split(/\n\s*\n/).map(p=>p.trim()).filter(Boolean);
    if(srcParas.length <= 1) return String(translated || "").trim();
    const t = String(translated || "").trim();
    if(/\n\s*\n/.test(t)) return t;
    const sentences = t.split(/(?<=[\.\?\!ã€‚ï¼ï¼Ÿ])\s+/).map(s=>s.trim()).filter(Boolean);
    if(sentences.length === 0) return t;
    const n = srcParas.length;
    const buckets = Array.from({length:n}, ()=>[]);
    for(let i=0;i<sentences.length;i++){
      buckets[i % n].push(sentences[i]);
    }
    return buckets.map(b=>b.join(" ")).join("\n\n").trim();
  }catch(e){
    return String(translated || "");
  }
}

